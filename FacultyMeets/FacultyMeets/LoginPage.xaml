<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacultyMeets.LoginPage"
             Title="LoginPage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20" />
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Label Text="Don't have an account?" HorizontalOptions="Center" Margin="0,20,0,0" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
