<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacultyMeets.LoginPage"
             Title="LoginPage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Login" FontSize="26" HorizontalOptions="Center" Margin="0,0,0,20" FontAttributes="Bold"/>

        <Label Text="Email" TextColor="{x:DynamicResource color_red}" />
        <Entry Placeholder="Email" x:Name="EmailEntry" Margin="0,0,0,20"/>

        <Label Text="Password" TextColor="{x:DynamicResource color_red}" />
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="0,0,0,20"/>

        <Button Text="Login" Clicked="OnLoginClicked" TextColor="White" BackgroundColor="{x:DynamicResource color_red}"/>

        <Label Text="Forgot Password" Margin="0,20,0,0" />

        <HorizontalStackLayout Margin="0,5,0,0">

            <Label Text="New User? " Margin="0,10,0,0" />
            <Button Text="Register" Clicked="OnRegisterClicked" BackgroundColor="White" TextColor="{x:DynamicResource color_red}"/>

        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>
