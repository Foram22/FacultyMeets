<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacultyMeets.HomePage"
             Title="HomePage">

    
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Image Source="Resources/Images/cambrian_logo.png" WidthRequest="150" HeightRequest="150"/>

        <Label Text="Choose Role" FontSize="18" HorizontalOptions="Center" Margin="0,10" />
        <StackLayout>
            <RadioButton x:Name="rb_faculty" Content="Faculty" CheckedChanged="OnCheckedChange" Style="{StaticResource Key=CustomRBStyle}"/>
            <RadioButton x:Name="rb_student" Content="Student" CheckedChanged="OnCheckedChange" Style="{StaticResource Key=CustomRBStyle}"/>

        </StackLayout>

        <Button x:Name="btnContinue" Text="Continue" Clicked="OnContinueClicked" BackgroundColor="{x:DynamicResource color_red}" TextColor="White"/>
    </StackLayout>
    

</ContentPage>
