<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacultyMeets.AddAvailabilityPage"
             >
    <StackLayout Padding="20">

        <Label Text="Faculty Add Availability" FontSize="26" HorizontalOptions="Center" Margin="0,0,0,20" FontAttributes="Bold" TextColor="{x:DynamicResource color_red}"/>

        <DatePicker x:Name="StartDatePicker" Format="D" />
        <TimePicker x:Name="StartTimePicker" Format="T" />

        <Label Text="to" FontSize="Medium" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>

        <DatePicker x:Name="EndDatePicker" Format="D" Margin="0,20,0,0"/>
        <TimePicker x:Name="EndTimePicker" Format="T" />

        <Button Text="Add Availability" Clicked="OnAddAvailabilityClicked" Margin="0,40,0,0"/>

    </StackLayout>
</ContentView>
