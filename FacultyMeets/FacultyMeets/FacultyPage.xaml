<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacultyMeets.FacultyPage"
             >
    <StackLayout>
        <SearchBar x:Name="SearchBar" Placeholder="Search for Faculty" SearchButtonPressed="OnSearchButtonPressed" TextColor="{x:DynamicResource color_red}" PlaceholderColor="{x:DynamicResource color_red}" CancelButtonColor="{x:DynamicResource color_red}"/>

        <ListView x:Name="FacultyListView" SelectionMode="Single" SelectedItem="OnFacultySelected" ItemSelected="OnFacultySelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentView>
