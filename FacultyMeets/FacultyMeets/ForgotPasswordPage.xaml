<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacultyMeets.ForgotPasswordPage"
             Title="ForgotPasswordPage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Forgot Password" FontSize="26" HorizontalOptions="Center" Margin="0,0,0,20" FontAttributes="Bold"/>

        <Label Text="Email" TextColor="{x:DynamicResource color_red}" />
        <Entry Placeholder="Email" x:Name="EmailEntry" Margin="0,0,0,20" Text="{Binding Email}"/>

        <Label Text="Password" TextColor="{x:DynamicResource color_red}" />
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="0,0,0,20" Text="{Binding Password}"/>

        <Label Text="Confirm Password" TextColor="{x:DynamicResource color_red}" />
        <Entry Placeholder="Confirm Password" x:Name="ConPasswordEntry" IsPassword="True" Margin="0,0,0,20" Text="{Binding Password}"/>

        <Button Text="Reset Password" Command="{Binding ForgotPassword}" TextColor="White" BackgroundColor="{x:DynamicResource color_red}"/>

    </StackLayout>
</ContentPage>
